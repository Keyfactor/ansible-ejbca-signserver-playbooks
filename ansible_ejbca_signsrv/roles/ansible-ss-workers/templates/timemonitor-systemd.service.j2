[Unit]
Description=SignServer TimeMonitor
After=network.target
After=wildfly.service

[Service]
Type=forking
# Below path need to be changed depending on the SignServer installation & SIGNSERVER_HOME directory: {{ signsrv_home }}/bin/timemonitor-in-background.sh
ExecStart={{ signsrv_home }}/bin/timemonitor-in-background.sh

[Install]
WantedBy=multi-user.target