timeserver.ntpdatecommand={{ timeserver_ntpdatecommand |default('/usr/sbin/ntpdate') }}
timeserver.ntpqcommand={{ timeserver_ntpqcommand |default('/usr/bin/ntpq') }}

signserver.managedconfig={{ signserver_managedconfig |default('true') }}

