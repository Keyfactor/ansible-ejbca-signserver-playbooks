timemonitor.stateweb.enabled={{ timemonitor_stateweb_enabled |default('true') }}
timemonitor.stateweb.bindaddress={{ timemonitor_stateweb_bindaddress |default('127.0.0.1') }}
timemonitor.stateweb.port={{ timemonitor_stateweb_port |default('8980') }}
timemonitor.stateweb.threads={{ timemonitor_stateweb_threads |default('5') }}
timemonitor.stateweb.backlog={{ timemonitor_stateweb_backlog |default('0') }}

signserver.process.url={{ signserver_process_url |default('http://localhost:8080/signserver/process') }}
signserver.statuspropertiesworker.name={{ signserver_statuspropertiesworker_name |default('TimeMonitorManager') }}
signserver.statusproperty.name={{ signserver_statusproperty_name |default('TIMESOURCE0_INSYNC') }}
signserver.leapstatusproperty.name={{ signserver_leapstatusproperty_name |default('LEAPSECOND') }}
